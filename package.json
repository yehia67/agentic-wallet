{
  "name": "agentic-wallet",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build": "pnpm build:backend && pnpm build:frontend",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start:prod",
    "start": "concurrently \"pnpm start:backend\" \"pnpm start:frontend\"",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "pnpm --filter backend lint",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "test": "pnpm test:backend && pnpm test:frontend",
    "heroku-postbuild": "pnpm install && pnpm build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
